# Vendure API Configuration
# Copy this file to .env.local and update with your values

# Required: Vendure Shop API URL
# For demo: https://readonlydemo.vendure.io/shop-api
# For local: http://localhost:3000/shop-api
NEXT_PUBLIC_VENDURE_SHOP_API_URL=https://readonlydemo.vendure.io/shop-api

# Optional: Channel token (defaults to '__default_channel__' if not set)
NEXT_PUBLIC_VENDURE_CHANNEL_TOKEN=__default_channel__

# Optional: Site configuration
NEXT_PUBLIC_SITE_NAME=Ever and Always
NEXT_PUBLIC_SITE_URL=https://everandalways.com
